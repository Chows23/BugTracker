@model List<Bug_Tracker.Models.TicketNotification>
@{
    ViewBag.Title = "Index";
}

<h2>Your Notifications</h2>

@foreach (var notif in Model)
{
    <div class="well">
        Notification for @notif.Ticket.Title
        <span class="pull-right">@Html.ActionLink("Remove", "RemoveNotificationFromUser", new { notifId = notif.Id }, new { @class = "btn btn-danger" })</span>
    </div>
}